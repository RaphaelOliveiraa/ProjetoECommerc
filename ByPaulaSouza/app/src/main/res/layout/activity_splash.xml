<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/branco"
    android:orientation="vertical"
    tools:context="com.example.raphaeloliveira.bypaulasouza.SplashActivity">
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/branco"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/BntSplash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/branco"
            android:src="@drawable/comrpar1" />

        <ImageButton
            android:id="@+id/BntSplash1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/branco"
            android:src="@drawable/contato" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/branco"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/BntSplas2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/branco"/>

        <ImageButton
            android:id="@+id/BntSplash3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/branco"/>
    </LinearLayout>
</LinearLayout>